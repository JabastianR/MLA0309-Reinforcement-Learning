import numpy as np
import pandas as pd
from sklearn.model_selection import train_test_split
from sklearn.preprocessing import LabelEncoder
from sklearn.ensemble import RandomForestRegressor
from sklearn.metrics import mean_squared_error

# Step 1: Create synthetic historical real estate data
np.random.seed(42)

data = pd.DataFrame({
    "Location": np.random.choice(["Urban", "Suburban", "Rural"], 300),
    "Property_Type": np.random.choice(["Residential", "Commercial"], 300),
    "Initial_Price": np.random.randint(2000000, 8000000, 300),
    "Final_Price": np.random.randint(3000000, 12000000, 300),
    "Years_Held": np.random.randint(3, 10, 300)
})

# Step 2: Calculate annual return
data["Annual_Return"] = (
    (data["Final_Price"] / data["Initial_Price"]) ** 
    (1 / data["Years_Held"]) - 1
)

# Step 3: Encode categorical variables
encoder = LabelEncoder()
data["Location"] = encoder.fit_transform(data["Location"])
data["Property_Type"] = encoder.fit_transform(data["Property_Type"])

# Step 4: Feature selection
X = data[["Location", "Property_Type", "Initial_Price", "Years_Held"]]
y = data["Annual_Return"]

# Step 5: Train-test split
X_train, X_test, y_train, y_test = train_test_split(
    X, y, test_size=0.25, random_state=42
)

# Step 6: Train the ML model
model = RandomForestRegressor(n_estimators=100, random_state=42)
model.fit(X_train, y_train)

# Step 7: Predictions
y_pred = model.predict(X_test)

# Step 8: Model evaluation
mse = mean_squared_error(y_test, y_pred)

# Step 9: Portfolio performance comparison
portfolio_performance = data.groupby("Property_Type")["Annual_Return"].mean()

print("Mean Squared Error:", mse)
print("\nAverage Annual Return by Portfolio:")
print(portfolio_performance)
